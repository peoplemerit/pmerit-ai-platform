# PMERIT Platform Environment Configuration
# Copy this file to .env and customize for your deployment

# Avatar Configuration (Phase 5)
# Base URL for avatar assets (must end with a trailing slash)
AVATAR_BASE_URL=/assets/avatars/

# Avatar model file name (should be a .glb file in AVATAR_BASE_URL)
AVATAR_MODEL=pm_classic.glb

# Avatar scale (1.0 = original size)
AVATAR_SCALE=1.0

# Camera position [x, y, z] in world space
CAMERA_POS=0,1.4,2.2

# Lighting preset: hemi-dir-soft, hemi-dir-hard, three-point
LIGHT_PRESET=hemi-dir-soft

# API Configuration
# Backend API base URL (placeholder for Phase 2+)
API_BASE_URL=/api

# AI Chat Configuration
AI_CHAT_URL=https://pmerit-ai-chat.openai.azure.com

# Tech Help Configuration
# Cloudflare KV namespace binding name (configured in wrangler.toml or Pages dashboard)
TECH_HELP_KV_NAMESPACE=TECH_HELP_KV

# Email webhook URL for notifications (optional, e.g., SendGrid, Zapier, Make.com)
TECH_HELP_EMAIL_WEBHOOK=https://hooks.example.com/tech-help-notifications

# Admin authentication token for listing tickets (REQUIRED in production)
TECH_HELP_ADMIN_TOKEN=your-secure-random-token-here

# Allowed CORS origin (REQUIRED in production - set to your domain)
ALLOWED_ORIGIN=https://peoplemerit.com

# Microsoft Translator API (Phase 3 - Multi-language Support)
# Sign up at: https://azure.microsoft.com/en-us/products/cognitive-services/translator/
# Free tier: 2 million characters/month
TRANSLATOR_KEY=your-azure-translator-subscription-key
TRANSLATOR_REGION=eastus

# Cloudflare KV Namespace for caching translated locales
# Configure in Cloudflare Pages dashboard: Settings → Functions → KV namespace bindings
LOCALES_KV=LOCALES_KV
