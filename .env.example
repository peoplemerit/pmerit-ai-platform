# PMERIT Platform Environment Configuration
# Copy this file to .env and customize for your deployment

# Avatar Configuration (Phase 5)
# Base URL for avatar assets (must end with a trailing slash)
AVATAR_BASE_URL=/assets/avatars/

# Avatar model file name (should be a .glb file in AVATAR_BASE_URL)
AVATAR_MODEL=pm_classic.glb

# Avatar scale (1.0 = original size)
AVATAR_SCALE=1.0

# Camera position [x, y, z] in world space
CAMERA_POS=0,1.4,2.2

# Lighting preset: hemi-dir-soft, hemi-dir-hard, three-point
LIGHT_PRESET=hemi-dir-soft

# API Configuration
# Backend API base URL (placeholder for Phase 2+)
API_BASE_URL=/api

# AI Chat Configuration
AI_CHAT_URL=https://pmerit-ai-chat.openai.azure.com
